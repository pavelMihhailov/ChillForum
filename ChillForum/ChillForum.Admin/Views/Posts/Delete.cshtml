@model PostOutputModel
@{
    ViewData["Title"] = "Delete Post";
}

<div class="container">
    <h2 class="text-danger">Are you sure you want to delete this post?</h2>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Content</p>
        </div>
    </div>
    <form asp-area="" asp-controller="Posts" asp-action="DeleteConfirmed">
        <input type="hidden" name="id" value="@Model.Id"/>
        <button type="submit" class="btn">Yes, I Confirm</button>
    </form>
</div>